
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div ng-controller="Voucher" ng-init="init('@ViewBag.PageUrl')">
    <section class="content" ng-init="GetVoucherData()">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header card-gray card-outline">
                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>

                        <!-- /.card-header -->
                        <div class="card-body">
                            <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-danger btn-sm float-right" ng-if="Ctrl.wDelete" ng-click="DeleteData(Voucher)">
                                            <i class="fas fa-trash-alt"></i> Delete
                                        </button>
                                        @*<div class="btn-group btn-group-sm float-right mr-1" ng-if="Ctrl.wDownload">
                                            <button type="button" class="btn btn-default">Export</button>
                                            <button type="button" class="btn btn-default dropdown-toggle dropdown-icon" data-toggle="dropdown">
                                                <span class="sr-only">Toggle Dropdown</span>
                                            </button>
                                            <div class="dropdown-menu" role="menu">
                                                @Html.ActionLink("Word", "ExportVoucher", "Report", new  { type = "word" }, new { @class = "dropdown-item" })
                                                @Html.ActionLink("Excel", "ExportVoucher", "Report", new { type = "excel" }, new { @class = "dropdown-item" })
                                            </div>
                                        </div>*@
                                        <button type="button" class="btn btn-warning btn-sm float-right mr-1" data-toggle="modal" data-target="#discprenacyModal" ng-if="Ctrl.wEdit" ng-click="clearData()">
                                            <i class="fas fa-exclamation"></i> with Discrepancy
                                        </button>
                                        <button type="button" class="btn btn-info btn-sm float-right mr-1" data-toggle="modal" data-target="#uploadModal" ng-if="Ctrl.wUpload" ng-click="clearData()">
                                            <i class="fas fa-upload"></i> Upload
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-12 col-md-6">
                                        <div class="dataTables_length form-inline">
                                            <label>
                                                Show
                                                <select name="example1_length" class="form-control form-control-sm" ng-model="pagingInfo.itemsPerPage" ng-change="setItemsPerPage(pagingInfo.itemsPerPage)">
                                                    <option value="5">5</option>
                                                    <option value="10">10</option>
                                                    <option value="25">25</option>
                                                    <option value="50">50</option>
                                                    <option value="100">100</option>
                                                </select> entries
                                            </label>
                                            <img src="~/Content/dist/img/ajax-loader2.gif" ng-show="loading" />
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-6">
                                        <div class="form-inline dataTables_filter">
                                            <label>
                                                Search:
                                                <input type="search" class="form-control form-control-sm mr-1" placeholder="" ng-model="pagingInfo.search">
                                                <select class="form-control form-control-sm mr-1" id="TemplateID" name="TemplateID" ng-model="pagingInfo.value1">
                                                    <option value="">Please select...</option>
                                                    <option ng-repeat="tp in Template" value="{{tp.Id}}">{{tp.Name}}</option>
                                                </select>
                                                <button type="button" class="btn btn-default btn-sm  mr-1" ng-click="search()">
                                                    <i class="fas fa-search"></i>
                                                </button>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 dataT">
                                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                                            <thead>
                                                <tr role="row">
                                                    <th class="text-center" width="3%">
                                                        <input type="checkbox" name="checkAll" id="checkAll" ng-model="selectedAll" ng-click="selectAll()" ng-disabled="!Ctrl.wDelete && !Ctrl.wEdit" />
                                                    </th>
                                                    <th class="text-xs sorting" width="4%" ng-click="sort('Id')">Nos</th>
                                                    <th class="text-xs sorting" ng-click="sort('TemplateName')">Template</th>
                                                    <th class="text-xs sorting" ng-click="sort('EventName')">Label</th>
                                                    <th class="text-xs sorting" ng-click="sort('Recipient')">Recipient</th>
                                                    <th class="text-xs sorting" ng-click="sort('VoucherCode')">Voucher Code</th>
                                                    <th class="text-xs sorting" ng-click="sort('Amount')">Amount</th>
                                                    <th class="text-xs sorting" ng-click="sort('WithDiscrepancy')">with Discrepancy?</th>
                                                    <th class="text-xs sorting" ng-click="sort('VoucherStatus')">Remarks</th>
                                                    <th class="text-xs sorting" ng-click="sort('PropertyName')">Property</th>
                                                    <th class="text-xs sorting" ng-click="sort('MerchantName')">Merchant</th>
                                                    <th class="text-xs text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-if="pagingInfo.totalItems == 0">
                                                    <td colspan="12"><center>No data to display</center></td>
                                                </tr>
                                                <tr ng-if="pagingInfo.totalItems > 0" ng-repeat="vc in Voucher">
                                                    <td class="text-center">
                                                        <input type="checkbox" name="check" id="check{{$index + 1}}" ng-model="vc.isChecked" ng-change="checkSelected(vc.isChecked)" ng-disabled="!(Ctrl.wDelete && Ctrl.wEdit) || (vc.VoucherStatus === 'Registered')" />
                                                    </td>
                                                    <td class="text-xs" ng-bind="(pagingInfo.itemsPerPage * (pagingInfo.page - 1)) + $index + 1"></td>
                                                    <td class="text-xs" ng-bind="vc.TemplateName"></td>
                                                    <td class="text-xs" ng-bind="vc.EventName"></td>
                                                    <td class="text-xs" ng-bind="vc.Recipient"></td>
                                                    <td class="text-xs text-center" ng-bind="vc.VoucherCode"></td>
                                                    <td class="text-xs text-right">{{vc.Amount | currency : "Php "}}</td>
                                                    <td class="text-xs text-center"><span ng-class="(vc.WithDiscrepancy === 'True')? 'badge badge-danger' : 'badge badge-success'" ng-bind="(vc.WithDiscrepancy === 'True')? 'Yes' : 'No'"></span></td>
                                                    <td class="text-xs text-center"><span ng-class="(vc.VoucherStatus === 'Registered')? 'badge badge-info' : 'badge badge-danger'" ng-bind="vc.VoucherStatus"></span></td>
                                                    <td class="text-xs">{{vc.PropertyName}} </td>
                                                    <td class="text-xs">{{vc.MerchantName}} </td>
                                                    <td class="text-xs text-center" ng-if="Ctrl.wDelete || Ctrl.wEdit">
                                                        <button type="button" class="btn btn-default btn-circle btn-sm" data-toggle="modal" data-target="#viewVoucherModal" ng-if="Ctrl.wEdit" ng-click="EditVoucherData(vc)"><i class="fas fa-eye"></i></button>
                                                        <button type="button" class="btn btn-secondary btn-circle btn-sm" data-toggle="modal" data-target="#createVoucherModal" ng-if="Ctrl.wEdit" ng-disabled="(vc.VoucherStatus === 'Registered')" ng-click="EditVoucherData(vc)"><i class="fas fa-pencil-alt"></i></button>
                                                        <button type="button" class="btn btn-danger btn-circle btn-sm" ng-if="Ctrl.wDelete" ng-disabled="(vc.VoucherStatus === 'Registered')" ng-click="DeleteVoucher(vc)"><i class="fas fa-trash-alt"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-sm-12 col-md-5">
                                        <div class="dataTables_info" id="example1_info" role="status" aria-live="polite">Showing {{pagingInfo.page}} to {{pagingInfo.totalItems/pagingInfo.itemsPerPage | roundup }} of {{pagingInfo.totalItems}} entries</div>
                                    </div>
                                    <div class="col-sm-12 col-md-7">
                                        <div class="dataTables_paginate paging_simple_numbers" id="example1_paginate">
                                            <ul uib-pagination total-items="(10 * pagingInfo.totalItems)/pagingInfo.itemsPerPage" ng-model="pagingInfo.page" ng-change="selectPage(pagingInfo.page)" max-size="10" class="pagination-sm" boundary-links="true" force-ellipses="true"></ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" ng-if="Ctrl.wPrint">
                                    <div class="col-sm-12 col-md-12">
                                        <button type="button" class="btn btn-secondary btn-sm float-right" ng-click="ExportReport('Print')">
                                            <i class="fas fa-print"></i> Report
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>

        <div class="modal fade" id="discprenacyModal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">With Discrepancy</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form name="discrepancyForm" novalidate role="form">
                        <div class="modal-body">
                            <div class="form-group has-feedback" show-errors>
                                <label for="Remarks">Reason</label>
                                <textarea class="form-control form-control-sm" id="Remarks" name="Remarks" ng-model="Remarks" placeholder="" rows="3" ng-required="true"></textarea>
                                <div style="color:red" class="invalid-feedback" ng-if="discrepancyForm.Remarks.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                            <button type="button" class="btn btn-primary btn-sm" ng-click="StatusData(Voucher, 1)">Ok</button>
                        </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <div class="modal fade" id="uploadModal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Upload Data</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form name="voucherForm" novalidate role="form">
                        <div class="modal-body js-loading-bar">
                            <p class="text-sm">You are going to upload data. Kindly use excel (.xls, .xlsx) format for uploading. </p>
                            <div class="form-group has-feedback" show-errors>
                                <label for="EventName">Label</label>
                                <input type="text" class="form-control form-control-sm" id="EventName0" name="EventName" ng-model="data.EventName" placeholder="" ng-disabled="ro" ng-required="true">
                                <div style="color:red" class="invalid-feedback" ng-if="voucherForm.EventName.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <label for="TemplateID0">Template *</label>
                                <select class="form-control form-control-sm" id="TemplateID0" name="TemplateID0" ng-model="data.TemplateID" ng-required="true">
                                    <option value="">Please select...</option>
                                    <option ng-repeat="tc in Template" ng-selected="tc.Id === data.TemplateID" value="{{tc.Id}}">{{tc.Name}}</option>
                                </select>
                                <div style="color:red" class="invalid-feedback" ng-if="voucherForm.TemplateID0.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <input type="file" name="file" ngf-select="SelectFile($file)" ng-disabled="ro" />
                            </div>
                            <div class="form-group mt-3">
                                <div class="progress progress-sm active">
                                    <div class="progress-bar bg-primary progress-bar-striped" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                                        <span class="sr-only">0% Complete</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-disabled="ro" ng-click="ClearData()">Close</button>
                            <button type="button" class="btn btn-primary btn-sm" ng-disabled="ro" ng-click="Import()">Proceed</button>
                        </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <div class="modal fade" id="createVoucherModal">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Update Voucher</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form name="VoucherForm" novalidate role="form">
                        <div class="modal-body">
                            <div class="form-group has-feedback" show-errors>
                                <label for="EventName">Label *</label>
                                <input type="text" class="form-control form-control-sm" id="EventName" name="EventName" ng-model="data.EventName" placeholder="" ng-required="true">
                                <div style="color:red" class="invalid-feedback" ng-if="VoucherForm.EventName.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <label for="Recipient">Recipient *</label>
                                <input type="text" class="form-control form-control-sm" id="Recipient" name="Recipient" ng-model="data.Recipient" placeholder="" ng-required="true">
                                <div style="color:red" class="invalid-feedback" ng-if="VoucherForm.Recipient.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <label for="VoucherCode">Voucher Code *</label>
                                <input type="text" class="form-control form-control-sm" id="VoucherCode" name="VoucherCode" ng-model="data.VoucherCode" placeholder="" ng-required="true">
                                <div style="color:red" class="invalid-feedback" ng-if="VoucherForm.VoucherCode.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <label for="Amount">Amount *</label>
                                <input type="number" class="form-control form-control-sm" id="Amount" name="Amount" ng-model="data.Amount" placeholder="" ng-required="true">
                                <div style="color:red" class="invalid-feedback" ng-if="VoucherForm.Amount.$error.required">You can't leave this empty.</div>
                            </div>
                            <div class="form-group has-feedback" show-errors>
                                <label for="TemplateID">Template *</label>
                                <select class="form-control form-control-sm" id="TemplateID" name="TemplateID" ng-model="data.TemplateID" ng-required="true">
                                    <option value="">Please select...</option>
                                    <option ng-repeat="tc in Template" ng-selected="tc.Id === data.TemplateID" value="{{tc.Id}}">{{tc.Name}}</option>
                                </select>
                                <div style="color:red" class="invalid-feedback" ng-if="VoucherForm.TemplateID.$error.required">You can't leave this empty.</div>
                            </div>
                        </div>
                        <div class="modal-footer justify-content-between">
                            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                            <button type="button" class="btn btn-secondary btn-sm" ng-click="SaveVoucher(data)">Save changes</button>
                        </div>
                    </form>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->

        <div class="modal fade" id="viewVoucherModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">      
                        <div class="row">

                            <div class="col-sm-12 mt-3">
                                <a href="~/Report/ViewVoucher?uniqueid={{data.UniqueID}}" class="font-weight-bold" target="_blank"><i class="fa fa-image"></i> Click here to view the E-Voucher</a>
                             
                                <p class="mb-0 mt-4">Copy URL of e-Voucher Validation</p>
                                <div class="input-group input-group-sm">
                                    <input type="text" id="myInput" class="form-control" value="{{data.UrlLink}}" />
                                    <span class="input-group-append">
                                        <button type="button" class="btn btn-info btn-flat" ng-click="CopyToClipboard()"><i class="fas fa-clipboard-list"></i></button>
                                    </span>
                                </div>
                            </div>
                            <div class="col-sm-12 mt-3">
                                <p class="mb-0"><strong>Remarks: </strong> {{data.Remarks}}</p>
                            </div>
                        </div>      
                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" ng-click="ClearData()">Close</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </section>
</div>

@section scripts{
    <script src="~/Scripts/ProjectScriptFile/Voucher.js"></script>
    <script src="~/Scripts/AngularJS/1.8.0/xlsx.full.min.js"></script>
    <script src="~/Scripts/AngularJS/1.8.0/jszip.js"></script>
}
